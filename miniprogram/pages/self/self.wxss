/**index.wxss**/
.container{
  padding: 0;
}
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
  background: #11b8f5;
  padding: 20rpx 0;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
  animation: loading 10s linear infinite;
}
@keyframes loading {
    from {
        transform: rotate(0deg)
    }
    to {
        transform: rotate(360deg)
    }
}
.userinfo-nickname {
  color: #fff;
  font-size: 32rpx;
}
button.btn-userInfo{
  margin: 400rpx 40rpx 0;
  color: #fff;
  background: #11b8f5;
}
button.btn-openSetting{
  position: absolute;
  top: 40rpx;
  right: 40rpx;
  color: #fff;
  width: 80rpx;
  height: 80rpx;
  background-image: url(data:image/png;base64,);
  background-position:0;
  background-size:80rpx 80rpx;
  background-color:#fff;
}
button.btn-qcode{
  margin: 80rpx 40rpx;
  color: #fff;
  background: #11b8f5;
}